<!DOCTYPE html>
<html>
<head>
  <title>My Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class ="container">
    <nav class="mb-3 navbar navbar-expand-lg navbar-light bg-light">
      <%= link_to "My Blog!", root_path, class: "navbar-brand" %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <%= link_to users_path, class: "nav-link" do %>
              Users
              <% if request.path == users_path %>
                <span class = "sr-only">(current)</span>
              <% end %>
            <% end %>
          
          </li>
        </ul>
        <div class ="ml-auto">
          <% if @current_user %>
          <%= link_to 'Add post', new_post_path, class: "btn btn-primary" %>
           <span class="dropdown">
            <a class="dropdown-toggle" id="dropdownMenu1" data-toggle="dropdown">
              <%= @current_user.full_name %>
              <span class="caret"></span>
            </a>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuOffset">
                <%= link_to 'Profile', user_path(@current_user), class: 'dropdown-item' %>
                <%= link_to 'Posts', posts_path, class: 'dropdown-item' %>
                <div class = "dropdown-divider"></div>
                <%= link_to 'Logout', session_path(@current_user), method: :delete, class: 'dropdown-item' %>
              </div>
            </span>
            
          <% else %>
            <%= link_to 'Login', new_session_path, class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </nav>
    
     <% if notice %>
      <div class="alert alert-success" role="alert">
        <%= notice %>
      </div>
    <% end %>
    
    <% if alert %>
      <div class="alert alert-danger" role="alert">
        <%= alert %>
      </div>
    <% end %>
    
    <div class = "row">
      <div class = "col-sm-10">
        <%= yield %>
      </div>
      <div class = "col-sm-2">
        <img src="http://via.placeholder.com/400x800" class= "img-fluid" />
      </div>
      </div>
    </div>
  </div>

</body>
</html>
