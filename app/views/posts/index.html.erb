


<% @posts.each do |post| %>
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%=post.title -%></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= post.user -%></h6>
        <p class="card-text"><%= truncate post.body %>.</p>
        <%= link_to 'Check it Out', post_path(post) %>
      </div>
    </div>
 <% end %>


